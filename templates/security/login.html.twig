{% extends 'base.html.twig' %}

{% block title %}Connexion!{% endblock %}

{% block body %}

    <div class="login shadow-lg">
        <div class="errorContainer">
            {% if error %}
                <div class="alert alert-danger error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3 error">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}
        </div>
        <form method="post">

            <div class="loginForm col-8 offset-2">
                <div class="titleLoginForm">
                    <h1 class="h3 mb-3 font-weight-normal titleLogin">Connexion</h1>
                </div>
                <div class="usernameLoginForm">
                    <label for="inputUsername">Username</label>
                    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus>
                </div>
                <div class="passwordLoginForm">
                    <label for="inputPassword">Password</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" required>
                </div>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                <button class="btnConnexion btn btn-lg btn-success offset-3 col-6" type="submit">
                    Sign in
                </button>
            </div>


            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}


        </form>
    </div>

{% endblock %}
