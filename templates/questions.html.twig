{% extends 'template.html.twig' %}
{% block body %}
    <div id="contentQuestions" class="content contentData">
        <!-- begin row -->
        <div class="row">
            <!-- begin col-8 -->
            <div class="col-xl-12">
                <!-- begin panel -->
                <button id="addQuestion" data-toggle="modal" class="btn btn-lg btn-aqua" onclick="displayNewQuestion()">Ajout</button>
                <div class="panel panel-inverse">
                    <!-- begin table-responsive -->
                    <div class="table-responsive">
                        <table id="questions" class="table table-condensed table-bordered">
                            <thead>
                                <div class="row">
                                    <tr class="col-12">
                                        <th class="col-1">Niveau</th>
                                        <th class="col-1">Thème</th>
                                        <th class="col-1">Sujet</th>
                                        <th class="col-1">Chapitre</th>
                                        <th class="col-1">Sous-chapitre</th>
                                        <th class="col-3">Question</th>
                                        <th class="col-2">Réponse</th>
                                        <th class="col-1">Point</th>
                                        <th class="col-1">Modification</th>
                                    </tr>
                                </div>
                            </thead>
                            <tbody>
                                {% for question in questions %}
                                    <tr>
                                        <td>{{ question.level }}</td>
                                        <td>{{ question.theme }}</td>
                                        <td>{{ question.subject }}</td>
                                        <td>{{ question.chapter }}</td>
                                        <td>{{ question.subChapter }}</td>
                                        <td>{{ question.question }}</td>
                                        <td>{{ question.answer }}</td>
                                        <td>{{ question.points}}</td>
                                        <td><button class="btn btn-theme btn-aqua" data-toggle="modal" onclick="displayEditQuestion({{ question.id }})"> Editer</button></td>
                                        <td><button class="btn btn-theme btn-black" data-toggle="modal" href="{{ path('delete_question', ['id' => question.id]) }}"> Delete</button></td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- end table-responsive -->
                </div>
                <!-- end panel -->
            </div>
            <!-- end col-12 -->
        </div>
    </div>
    <div id="editQuestionModal" class="modal fade"></div>
    <div id="newQuestionModal" style="
    background-color:white;
    opacity: 70%;
    " class="modal fade">{{ form(newForm) }}</div>
    <!-- end #content -->
{% endblock %}

